<%= content_for :body_styles do %>
  background-image: url('<%= asset_path "woman.jpg" %>'); background-size: cover; background-position: center right; background-repeat: no-repeat
<% end %>
<%= render layout: 'layouts/accounts' do %>
  <h5 class="mb-4">Create an account.</h5>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <%= hidden_field_tag :campaign_type, params[:campaign_type] %>
    <div class="form-group mb-4">
      <%= f.label :full_name %>
      <%= f.text_field :full_name, class: "form-control", autocomplete: "name", autofocus: true %>
    </div>
    <div class="form-group mb-4">
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control", autocomplete: "email", "aria-describedby": "emailHelpBlock" %>
      <small id="emailHelpBlock" class="form-text text-muted">
        We'll email you updates about your campaign, we'll never give your email address to anyone else.
      </small>
    </div>
    <div class="form-group mb-4">
      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control", autocomplete: "password" %>
    </div>
    <div class="form-group mb-4">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "password" %>
    </div>
    <% if params[:campaign_type] == 'birthday' %>
      <%= form_group do %>
        <%= label_tag "birthday_day", "Your Birthday" %>
        <div>
          <%= select_date Time.now, prefix: "user[birthday]", order: [:day, :month] %>
        </div>
      <% end %>
    <% end %>
    <%= f.submit "Sign Up", class: "btn btn-primary btn-block" %>
  <% end %>
  <small class="text-muted">You can find out more about our <a href="https://www.justiceandcare.com/privacy-policy/">privacy policy</a></small>
<% end %>
